{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pioRun",
            "type": "shell",
            "command": "pio",
            "args": [
                "run"
            ]
        },
        {
            "label": "RemoteUpload",
            "type": "shell",
            "command": "./cmd/uploadArduinoFromPi.sh",
            "args": [
                "${input:rpiUserName}",
                "${input:rpiAddress}",
                "${workspaceFolder}/build/megaatmega2560/firmware.hex",
                "${input:arduinoPort}"
            ],
            "dependsOn": "pioRun",
            "group": "build",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "rpiUserName",
            "description": "Username of RaspberryPi? ",
            "default": "pi"
        },
        {
            "type": "promptString",
            "id": "rpiAddress",
            "description": "Adresse of RaspberryPi? ",
            "default": "192.168.100.100"
        },
        {
            "type": "promptString",
            "id": "arduinoPort",
            "description": "Arduino communication port? ",
            "default": "/dev/ttyACM0"
        }
    ]
}